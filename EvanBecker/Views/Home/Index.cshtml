@{
    ViewData["Title"] = "Home";
}

<div class="hidden-md-down">
    <div id="gameContainer" style="height: 600px; margin: auto" position: relative></div>
    <div style="position: absolute; top: 38%; left: 53%; transform: translate(-50%, -50%); margin: 0; padding: 0; width: 100%">
        <div class="container">
            <div class="row d-flex align-items-lg-center flex-wrap g-mb-60 g-mb-0--lg">
                <div class="col-md-2 col-lg-2"></div>
                <div class="col-md-8 col-lg-8">
                    <h2 class="g-color-white g-font-size-36 text-uppercase g-line-height-1_2 g-mb-30">
                        <span class="g-font-weight-900 g-color-primary">
                            PROJ: <span class="g-font-weight-600">Ray Marcher</span>
                            <div class="g-color-white g-font-weight-400" style="display: inline-block">/ Sphere Tracer</div>
                        </span>
                    </h2>

                    <p class="g-color-gray-light-v5 g-font-size-16 g-mb-35 pull-right">
                        A <span class="g-color-primary g-font-weight-600">signed distance functions (SDF)</span> is a method of returning
                        the shortest distance between a coordinate and a surface. We render these SDFs in the scene using a
                        <span class="g-color-primary g-font-weight-600">ray marching</span>
                        algorithm, also commonly referred to as sphere tracing.
                        <br /><br />SDF's can also be used for generating interesting 3D fractals. My goal is to use this ray marching
                        framework I have built to generate future dynamic and detailed fractals.
                    </p>

                    <a asp-area="" asp-controller="Home" asp-action="Raymarch" class="btn btn-xl btn-primary g-font-weight-600 g-letter-spacing-0_5 text-uppercase text-left rounded-0 g-mr-10 g-mb-15">
                        <span class="pull-left">
                            Play Demo Online
                            <span class="d-block g-font-size-11">On a Web Browser with WebGL</span>
                        </span>
                        <i class="fa fa-chrome float-right g-font-size-32 g-ml-15"></i>
                    </a>

                    <a href="https://github.com/beckerej/Raymarch" class="btn btn-xl btn-primary g-font-weight-600 g-letter-spacing-0_5 text-uppercase text-left rounded-0 g-mr-10 g-mb-15">
                        <span class="pull-left">
                            View src on GitHub
                            <span class="d-block g-font-size-11">View the Unity C# Shader Code</span>
                        </span>
                        <i class="fa fa-github float-right g-font-size-32 g-ml-15"></i>
                    </a>
                </div>
                <div class="col-md-2 col-lg-2"></div>
            </div>
        </div>
    </div>
</div>

<div class="hidden-lg-up">
    <!-- Promo Block - Parallax -->
    <section class="g-bg-gray-light-v5 bgpara">
        <div class="container">
            <div class="row justify-content-between" data-calc-target="#js-header" style="height: calc(100vh - 80px);">
                <div class="col-md-5 align-self-center">
                    <div style="text-align: center;">
                        <br><p>
                            <h2 class="g-color-white g-font-size-36 text-uppercase g-line-height-1_2 g-mb-30">
                                Mobile-Friendly
                                <br><span class="g-font-weight-700"><div class="g-color-blue">With Any Browser</div></span>
                            </h2>
                        </p>
                        <p class="g-color-gray-light-v5 g-font-size-16 g-mb-35">
                            Get a responsive website built with the latest CSS frameworks meaning your website not only works, but looks good with any modern browser and device. Get an <strong>App-like</strong> experience for your website!
                        </p>

                        <br>
                    </div>
                    <a class="btn btn-md u-btn-primary u-btn-hover-v1-3 g-letter-spacing-0_5 text-uppercase g-rounded-10 g-px-20 g-py-10 mx-2 g-mb-15" href="#">
                        <i class="g-font-size-28 mr-3 fa fa-apple"></i>
                        <span class="d-inline-block text-left">
                            <span class="d-block g-font-weight-600 g-font-size-13">Download app</span>
                            <span class="d-block g-font-size-10">From App Store</span>
                        </span>
                    </a>
                    <a class="btn btn-md u-btn-teal u-btn-hover-v1-3 g-letter-spacing-0_5 text-uppercase g-rounded-10 g-px-20 g-py-10 mx-2 g-mb-15" href="#">
                        <i class="g-font-size-28 mr-3 fa fa-android"></i>
                        <span class="d-inline-block text-left">
                            <span class="d-block g-font-weight-600 g-font-size-13">Download app</span>
                            <span class="d-block g-font-size-10">From Play Market</span>
                        </span>
                    </a>
                </div>
                <div class="col-md-6 align-self-end g-overflow-hidden frontphone">
                    <img class="img-fluid" src="~/images/inline/inline1.png" alt="Evan Becker" data-animation="fadeInUp" data-animation-delay="1200" data-animation-duration="1500">
                </div>
            </div>
        </div>
    </section>
    <!-- End Promo Block - Parallax -->
</div>

<!-- About -->
<section class="g-pt-50 g-pb-100">
    <div class="container">
        <!-- Image, Text Block -->
        <div class="row d-flex align-items-lg-center flex-wrap g-mb-60 g-mb-0--lg">
            <div class="col-md-6 col-lg-8">
                <img class="img-fluid rounded" src="~/images/design.jpg" alt="Image Description" height="600" width="900">
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="g-mt-minus-30 g-mt-0--md g-ml-minus-100--lg">
                    <div class="g-mb-20">
                        <h2 class="g-color-black g-font-weight-600 g-font-size-25 g-font-size-35--lg g-line-height-1_2 mb-4">
                            Rendering a 3D World
                        </h2>
                        <p class="g-font-size-16">
                            Working in 3D coordinate systems has grew into more than just a hobby;
                            Whether it's working in CAD software for 3D printing or CNCs projects, building 3D CAD-like software,
                            transforming 3D objects in real space, designing 3D games, or even building renderers to push the
                            limit of what's possible, I'm doing it.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Image, Text Block -->
    </div>

    <div class="container">
        <!-- Image, Text Block -->
        <div class="row d-flex justify-content-between align-items-lg-center flex-wrap g-mt-minus-50--lg">
            <div class="col-md-6 flex-md-unordered">
                <div class="g-brd-around--md g-brd-10 g-brd-white rounded">
                    <img class="img-fluid w-100 rounded" src="~/images/devices.jpg" alt="Image Description" height="450" width="600">
                </div>
            </div>
            <div class="col-md-6 col-lg-4 ml-auto flex-md-first">
                <div class="g-mt-minus-30 g-mt-0--md g-ml-minus-100--lg">
                    <div class="g-mb-20">
                        <h2 class="g-color-black g-font-weight-600 g-font-size-25 g-font-size-35--lg g-line-height-1_2 mb-4">
                            Want to talk?<br>
                        </h2>
                        <p class="g-font-size-16">Get in contact with me now and find out more about my experience. Have a large project and need a helping hand? This is the best place to inquire about my services.</p>
                    </div>
                    <a class="btn u-btn-blue g-brd-2 g-brd-white g-font-size-13 g-rounded-50 g-pl-20 g-pr-15 g-py-9" href="contact-me.html">
                        Contact Me
                        <span class="align-middle u-icon-v3 g-width-16 g-height-16 g-color-black g-bg-white g-font-size-11 rounded-circle ml-3">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <!-- End Image, Text Block -->
    </div>
</section>

@section Scripts {
    <script src="~/UnityBuilds/Build/UnityLoader.js"></script>
    <script>
        var gameInstance = UnityLoader.instantiate("gameContainer", "@Url.Content("~/UnityBuilds/Build/UnityBuilds.json")");
    </script>
}